<div class="transition-all flex justify-center items-center duration-300">
    <div class="bg-white rounded-3xl p-2 text-center max-w-md md:mx-4">
        <div class="mx-auto h-24 w-24 rounded-full bg-white flex items-center justify-center text-gray-400">
            <svg class="h-12 w-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 7h18M3 7l2 12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2l2-12M8 7V5a4 4 0 0 1 8 0v2"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6M9 16h4"/>
            </svg>
        </div>
        <h1 class="mt-8 text-3xl md:text-4xl font-bold text-[#003033] font-['Cairo',sans-serif]">{{ data.title |  default("سلة مشترياتك فارغة") }} </h1>
        <p class="mt-3 text-gray-600 text-base md:text-lg font-['Cairo',sans-serif]">{{ data.title |  default("تبدو سلتك فارغة. ابدأ بإضافة بعض المنتجات الرائعة!") }}</p>
        <div class="mt-10 flex flex-col gap-4">
            <a href={{ data.BtnUrl  }} class="inline-flex items-center justify-center gap-3 bg-white text-[#003033] border-2 border-gray-200 rounded-2xl px-10 py-4 md:px-14 md:py-5 font-bold text-lg md:text-xl shadow-sm hover:shadow-md hover:bg-gray-50 transform hover:-translate-y-1 transition-all duration-300 font-['Cairo',sans-serif]">
                {{ data.BtnText }}
            </a>
            <a href="/latest" class="inline-flex items-center justify-center gap-3 bg-[#003033] hover:bg-[#004d4d] text-white rounded-2xl px-10 py-4 md:px-14 md:py-5 font-bold text-lg md:text-xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300 font-['Cairo',sans-serif] border-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 group-hover:rotate-12 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M12 5l7 7-7 7" /></svg>
                متابعة التسوق
            </a>
        </div>
    </div>
</div>
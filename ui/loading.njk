<div class="flex w-full h-full justify-center items-center z-30">
    <div class="relative w-8  min-h-8 h-full flex items-center justify-center">
      <span class="absolute w-2 h-2 bg-gray-500 rounded-full animate-dot" style="--i:0; --r:0deg; transform: rotate(0deg) translateY(-12px);"></span>
      <span class="absolute w-2 h-2 bg-gray-500 rounded-full animate-dot" style="--i:1; --r:45deg; transform: rotate(45deg) translateY(-12px);"></span>
      <span class="absolute w-2 h-2 bg-gray-500 rounded-full animate-dot" style="--i:2; --r:90deg; transform: rotate(90deg) translateY(-12px);"></span>
      <span class="absolute w-2 h-2 bg-gray-500 rounded-full animate-dot" style="--i:3; --r:135deg; transform: rotate(135deg) translateY(-12px);"></span>
      <span class="absolute w-2 h-2 bg-gray-500 rounded-full animate-dot" style="--i:4; --r:180deg; transform: rotate(180deg) translateY(-12px);"></span>
      <span class="absolute w-2 h-2 bg-gray-500 rounded-full animate-dot" style="--i:5; --r:225deg; transform: rotate(225deg) translateY(-12px);"></span>
      <span class="absolute w-2 h-2 bg-gray-500 rounded-full animate-dot" style="--i:6; --r:270deg; transform: rotate(270deg) translateY(-12px);"></span>
      <span class="absolute w-2 h-2 bg-gray-500 rounded-full animate-dot" style="--i:7; --r:315deg; transform: rotate(315deg) translateY(-12px);"></span>
    </div>
  </div>
  
  <style>
  @keyframes dotPulse {
    0%, 80%, 100% { transform: rotate(var(--r)) translateY(-12px) scale(0.6); opacity: 0.3; }
    40% { transform: rotate(var(--r)) translateY(-12px) scale(1); opacity: 1; }
  }
  
  .animate-dot {
    animation: dotPulse 1s linear infinite;
    animation-delay: calc(var(--i) * 0.12s);
  }
  </style>
  
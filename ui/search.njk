<!-- Search Popup -->
<div
  x-cloak
  x-data="xDataSearch()"
  x-show="modal.open && modal.type === 'search'"
  class="fixed inset-0 z-50"
  x-transition:enter="transform transition ease-out duration-300"
  x-transition:enter-start="-translate-y-full"
  x-transition:enter-end="translate-y-0"
  x-transition:leave="transform transition ease-in duration-200"
  x-transition:leave-start="translate-y-0"
  x-transition:leave-end="-translate-y-full"
>

  <div class="absolute top-0 left-0 w-full max-md:h-full bg-white shadow-lg">
    <div class="flex flex-col md:px-12 px-[10px] max-md:h-full">
      <!-- Header -->
      <div class="flex flex-col gap-2 pt-6">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-800 font-['Cairo']">البحث في المنتجات</h2>
          <button @click="toggleModal('search')" class="text-gray-600 hover:text-gray-800">
            <svg class="h-8 w-8" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none">
              <path d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Input + Suggestions -->
        <form @submit.prevent="setSearch(search)" class="relative">
          <input
            x-ref="searchInput"
            x-init="$nextTick(() => $refs.searchInput.focus())"
            x-model="search"
            type="text"
            placeholder="ابحث عن المنتجات..."
            class="w-full px-6 py-4 text-lg border outline-none border-gray-300 rounded-lg focus:border-black transition-colors font-['Cairo']"
            @input="onInput"
            autocomplete="off"
          />

          <button
            @click.prevent="setSearch(search)"
            type="submit"
            class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-600 hover:text-black"
            aria-label="Search"
          >
            <svg class="h-6 w-6" viewBox="0 0 22 22" stroke="currentColor" stroke-width="1.9" fill="none">
              <circle cx="11" cy="10" r="7"></circle>
              <path d="m16 15 3 3" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
          </button>

          <!-- Suggestions dropdown -->
          <template x-if="suggestions.length">
            <div
              class="absolute mt-2 w-full max-h-72 overflow-auto bg-white border border-gray-200 rounded-lg shadow-lg z-10"
            >
              <ul>
                <template x-for="(item, idx) in suggestions" :key="item._id || idx">
                  <li
                    class="px-4 py-3 cursor-pointer hover:bg-gray-50 flex items-center gap-3"
                    @click="goTo(item)"
                  >
                    <img
                      :src="(item.images && item.images[0]?.fileUrl) || '/placeholder.svg'"
                      alt=""
                      class="w-8 h-8 object-cover rounded"
                    />
                    <span class="text-gray-800 font-['Cairo']" x-text="item.title"></span>
                  </li>
                </template>
              </ul>
            </div>
          </template>
        </form>
      </div>

      <!-- Content -->
      <div class="flex flex-col pt-3 gap-3 max-md:flex-1 overflow-y-auto pb-6">
        <!-- أحدث المنتجات -->
        <div class="flex flex-col gap-2">
          <h3 class="text-lg font-semibold text-gray-800 font-['Cairo']">أحدث المنتجات</h3>
          <div class="flex flex-wrap gap-2">
            <template x-for="item in products.slice(0, 5)" :key="item._id">
              <a
                :href="'/product/' + item.slug"
                class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-colors"
              >
                <span x-text="item.title" class="font-['Cairo']"></span>
              </a>
            </template>
          </div>
        </div>

        <!-- البحث حسب الفئة -->
        <div class="flex flex-col gap-2">
          <h3 class="text-lg font-semibold text-gray-800 font-['Cairo']">البحث حسب الفئة</h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
            <template x-for="item in collections" :key="item._id">
              <a
                :href="'/collection/' + item.slug"
                class="flex items-center p-2 gap-2 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
              >
                <img :src="item.image?.fileUrl" alt="" class="w-8 h-8 rounded-lg object-cover" />
                <span x-text="item.title" class="text-gray-700 font-['Cairo']"></span>
              </a>
            </template>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

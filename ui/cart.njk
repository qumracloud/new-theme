<!-- ############### START: PROFESSIONAL CART SIDE-PANEL ############### -->
<div x-cloak x-data="xDataCart()" :class="modal.open && modal.type==='cart' ? 'fixed inset-0 z-50' : 'hidden'">
    <!-- Overlay -->
    <div @click="toggleModal('cart')" x-show="modal.open && modal.type === 'cart'"
        class="absolute inset-0 bg-black bg-opacity-50">
    </div>

    <!-- Panel (from Left) — move only -->
    <div x-show="modal.open && modal.type === 'cart'"
        class="absolute top-0 left-0 md:p-4 p-3 w-full max-w-md h-screen flex flex-col"
        x-transition:enter="transform-gpu transition-transform duration-300 ease-out"
        x-transition:enter-start="-translate-x-full" x-transition:enter-end="translate-x-0"
        x-transition:leave="transform-gpu transition-transform duration-200 ease-in"
        x-transition:leave-start="translate-x-0" x-transition:leave-end="-translate-x-full">
        <div class="bg-white h-full rounded-lg overflow-hidden shadow-xl">
            <div x-show="globals?.cart?.items && globals?.cart?.items.length > 0 && !globalLoading.cart"
                class="flex flex-col h-full">
                <!-- Header -->
                <div class="flex justify-between items-center p-5 border-b border-gray-100 flex-shrink-0">
                    <h2 class="text-xl font-bold text-gray-800 font-cairo">
                        سلة مشترياتك (<span x-text="globals?.cart?.items?.length || 0" class="text-gray-900"></span>)
                    </h2>
                    <button @click="toggleModal('cart')"
                        class="text-gray-600 hover:text-gray-800 p-2 hover:bg-gray-100 rounded-full transition-colors duration-200">
                        <svg class="h-5 w-5" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <!-- Product List -->
                <div class="p-4 overflow-y-auto flex flex-1 flex-col gap-4">
                    <template x-for="item in globals?.cart?.items" :key="item?._id">
                        <div class="relative">
                            <!-- SKELETON لما العنصر مشغول -->
                            <template x-if="inbusy(item._id)">
                                <div class="flex items-start gap-3 h-[80px] p-3 bg-gray-50 rounded-lg">
                                    <div class="w-16 h-16 bg-gray-200 rounded-md animate-pulse"></div>
                                    <div class="flex-grow flex flex-col gap-2">
                                        <div class="h-4 bg-gray-200 rounded w-3/4 animate-pulse"></div>
                                        <div class="flex justify-between items-center">
                                            <div class="h-5 bg-gray-200 rounded w-20 animate-pulse"></div>
                                            <div class="flex-1 flex justify-end">
                                                <div class="flex w-max items-center gap-1 rounded-md">
                                                    <div class="w-8 h-8 bg-gray-200 rounded-md animate-pulse"></div>
                                                    <div class="w-8 h-8 bg-gray-200 rounded-md animate-pulse"></div>
                                                    <div class="w-8 h-8 bg-gray-200 rounded-md animate-pulse"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="h-3 bg-gray-200 rounded w-16 animate-pulse"></div>
                                    </div>
                                </div>
                            </template>

                            <!-- المحتوى الحقيقي لما مش مشغول -->
                            <template x-if="!inbusy(item._id)">
                                <div class="flex items-start gap-3 p-3 bg-white rounded-lg border border-gray-200 hover:border-gray-300 hover:shadow-md transition-all duration-300">
                                    <a href="#" class="flex-shrink-0">
                                        <img :src="item?.productData?.image?.fileUrl" alt="Product Image"
                                            class="w-16 h-16 rounded-md object-cover border border-gray-200 hover:border-gray-300 transition-colors duration-200">
                                    </a>

                                    <div class="flex-grow flex items-start flex-col gap-2">
                                        <a :href="`/product/${item?.productData?.slug}`" x-text="item?.productData?.title"
                                            class="font-bold text-gray-900 hover:text-gray-700 transition-colors text-sm duration-200 font-cairo line-clamp-2"></a>

                                        <template x-if="item?.variantData?.options?.length > 0">
                                            <div class="flex flex-wrap gap-1">
                                                <template x-for="opt in item?.variantData?.options" :key="opt?._id">
                                                    <span
                                                        class="inline-flex items-center px-2 py-1 bg-gray-100 text-gray-700 rounded-md text-xs font-medium font-cairo">
                                                        <span x-text="opt?.option?.name"></span> :
                                                        <span class="font-bold" x-text="opt?.label"></span>
                                                    </span>
                                                </template>
                                            </div>
                                        </template>

                                        <div class="flex justify-between w-full items-center">
                                            <!-- عرض الأسعار -->
                                            <div class="flex flex-col gap-1">
                                                <!-- السعر الحالي -->
                                                <div x-show="item.totalPrice > 0" class="flex items-center gap-1">
                                                    <p x-text="item.totalPrice"
                                                        class="font-bold text-lg text-gray-900 font-cairo"></p>
                                                    <span class="text-sm text-gray-900 font-cairo"
                                                        x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                                                </div>
                                                
                                                <!-- السعر القديم (إذا كان مختلف) -->
                                                <div x-show="item.totalCompareAtPrice > item.totalPrice" class="flex items-center gap-1">
                                                    <p x-text="item.totalCompareAtPrice"
                                                        class="text-sm text-gray-500 line-through font-cairo"></p>
                                                    <span class="text-xs text-gray-500 font-cairo"
                                                        x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                                                </div>
                                                
                                                <!-- الخصم -->
                                                <div x-show="item.totalSavings > 0" class="flex items-center gap-1">
                                                    <span class="text-xs text-green-600 font-bold font-cairo">خصم:</span>
                                                    <p x-text="item.totalSavings"
                                                        class="text-xs text-green-600 font-bold font-cairo"></p>
                                                    <span class="text-xs text-green-600 font-bold font-cairo"
                                                        x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                                                </div>
                                            </div>

                                            <div class="flex-1 flex justify-end">
                                                <div class="flex w-max items-center border border-gray-200 rounded-md">
                                                    <button @click="decreaseCartItem(item._id, item.quantity)"
                                                        aria-label="تقليل الكمية"
                                                        class="w-8 h-8 flex items-center justify-center hover:bg-gray-50 transition-colors">
                                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                                            width="14" height="14" class="text-gray-600">
                                                            <rect y="11" width="24" height="2" />
                                                        </svg>
                                                    </button>

                                                    <span class="px-3 py-1 font-medium text-gray-700 font-cairo text-sm"
                                                        x-text="item.quantity"></span>

                                                    <button @click="increaseCartItem(item._id, item.quantity)"
                                                        aria-label="زيادة الكمية"
                                                        class="w-8 h-8 flex items-center justify-center hover:bg-gray-50 transition-colors">
                                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                                            width="14" height="14" class="text-gray-600">
                                                            <g id="_01_align_center" data-name="01 align center">
                                                                <polygon
                                                                    points="24 11 13 11 13 0 11 0 11 11 0 11 0 13 11 13 11 24 13 24 13 13 24 13 24 11" />
                                                            </g>
                                                        </svg>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        <button aria-label="حذف المنتج" @click="clearCartItem(item._id)"
                                            class="text-sm text-red-500 hover:text-red-700 hover:underline font-cairo w-fit">إزالة</button>
                                    </div>
                                </div>
                            </template>
                        </div>
                    </template>
                </div>

                <!-- Panel Footer -->
                <div class="p-4 rounded-lg flex h-max flex-col gap-4 border-t border-gray-100 bg-gray-50">
                    <!-- تفاصيل الأسعار -->
                    <div class="bg-white rounded-lg p-4 border border-gray-200">
                        
                        <!-- تفاصيل الأسعار -->
                        <div class="space-y-3">
                            <!-- السعر قبل الخصم -->
                            <div x-show="globals?.cart?.totalCompareAtPrice > globals?.cart?.totalPrice" class="flex justify-between items-center">
                                <span class="text-sm text-gray-600 font-cairo">السعر قبل الخصم:</span>
                                <div class="flex items-center gap-1">
                                    <span class="text-sm text-gray-800 font-cairo"
                                        x-text="globals?.cart?.totalCompareAtPrice"></span>
                                    <span class="text-xs text-gray-800 font-cairo"
                                        x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                                </div>
                            </div>
                            
                            <!-- السعر بعد الخصم -->
                            <div x-show="globals?.cart?.totalCompareAtPrice > globals?.cart?.totalPrice" class="flex justify-between items-center">
                                <span class="text-sm text-gray-600 font-cairo">السعر بعد الخصم:</span>
                                <div class="flex items-center gap-1">
                                    <span class="text-sm text-gray-800 font-cairo"
                                        x-text="globals?.cart?.totalPrice"></span>
                                    <span class="text-xs text-gray-800 font-cairo"
                                        x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                                </div>
                            </div>
                            
                            <!-- الخصم -->
                            <div x-show="globals?.cart?.totalSavings > 0" class="flex justify-between items-center">
                                <span class="text-sm text-gray-600 font-cairo">الخصم:</span>
                                <div class="flex items-center gap-1">
                                    <span class="text-sm text-green-600 font-bold font-cairo"
                                        x-text="`-${globals?.cart?.totalSavings}`"></span>
                                    <span class="text-xs text-green-600 font-bold font-cairo"
                                        x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- الإجمالي -->
                        <div class="mt-4 pt-3 border-t border-gray-200 bg-gray-50 rounded-lg p-3">
                            <div class="flex justify-between items-center">
                                <span class="text-lg font-bold text-gray-800 font-cairo">الإجمالي:</span>
                                <div class="flex items-center gap-1">
                                    <span class="text-xl font-bold text-gray-900 font-cairo"
                                        x-text="globals?.cart?.totalPrice"></span>
                                    <span class="text-xl font-bold text-gray-900 font-cairo"
                                        x-text="globals.app.generalSettings.currency.currencySymbol"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <button :disabled="globalLoading.checkout" aria-label="إتمام الشراء" @click="checkout()"
                            class="block w-full text-center bg-[#003033] hover:bg-[#004d4d] text-white min-h-12 py-3 rounded-lg font-bold transition-all duration-300 font-cairo flex items-center justify-center gap-2">
                            <i class="fi fi-rr-shopping-cart text-lg"></i>
                            <span x-show="!globalLoading.checkout">إتمام الشراء</span>
                            <template x-if="globalLoading.checkout">
                                <div class="flex justify-center">
                                    {%ui "loading.njk" %}
                                </div>
                            </template>
                        </button>
                        <a aria-label="عرض السلة" href="/cart"
                            class="flex items-center justify-center border border-gray-300 text-gray-700 min-h-12 w-14 py-3 rounded-lg font-bold group hover:border-gray-400 hover:bg-gray-50 transition-all duration-300 font-cairo">
                            <i class="fi text-base fi-ts-cart-minus group-hover:text-gray-800"></i>
                        </a>
                    </div>
                </div>
            </div>

            <template x-if="(!globals?.cart?.items || globals?.cart?.items.length === 0) && !globalLoading.cart">
                <div class="flex flex-col h-full">
                    <!-- Header for empty cart -->
                    <div class="flex justify-between items-center p-5 border-b border-gray-100">
                        <h2 class="text-xl font-bold text-gray-800 font-cairo">سلة المشتريات</h2>
                        <button @click="toggleModal('cart')"
                            class="text-gray-600 hover:text-gray-800 p-2 hover:bg-gray-100 rounded-full transition-colors duration-200">
                            <svg class="h-5 w-5" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>

                    <!-- Empty Cart Content -->
                    <div class="flex-1 flex items-center justify-center p-4">
                        {%ui "empty.njk" , BtnText="تصفح اقسام المنتجات",BtnUrl="/collections"%}
                    </div>
                </div>
            </template>
        </div>
    </div>
</div>
<!-- ############### END: PROFESSIONAL CART SIDE-PANEL ############### -->
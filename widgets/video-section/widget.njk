<!-- Video Section -->
<section class="relative w-full overflow-hidden">
  {% if widget.data.video_url and widget.data.video_url.fileUrl %}
    {# Render single video from section settings #}
    <div class="relative h-64 md:h-96 w-full overflow-hidden">
      <video class="absolute top-0 left-0 w-full h-full object-cover" autoplay loop muted playsinline>
        <source src="{{ widget.data.video_url.fileUrl }}" type="video/mp4">
      </video>
      <div class="absolute inset-0 flex flex-col items-center justify-center gap-y-6">
        <div class="text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white leading-tight px-6 drop-shadow-lg">
            {{ widget.data.default_title | default('اكتشف افضل الخصومات') }}
          </h2>
          <h3 class="text-xl md:text-2xl font-semibold text-white/90 leading-tight px-6 drop-shadow-lg">
            {{ widget.data.default_subtitle | default('والعروض الحصريه') }}
          </h3>
        </div>
        <a href="{{ widget.data.default_button_link | default('/collections') }}" 
           class="border-2 border-white text-white font-bold py-4 px-10 rounded-full hover:bg-white hover:text-black transition-all duration-300 transform hover:scale-105 shadow-lg backdrop-blur-sm bg-white/10">
          {{ widget.data.default_button_text | default('تسوق الآن') }}
        </a>
      </div>
    </div>
  {% else %}
    <div class="bg-gradient-to-r from-gray-100 to-gray-200 h-64 md:h-96 flex items-center justify-center">
      <div class="text-center">
        <h2 class="text-2xl md:text-4xl font-bold text-gray-600 mb-4">Video Section</h2>
        <p class="text-gray-500">أضف فيديو للقسم</p>
      </div>
    </div>
  {% endif %}
</section>
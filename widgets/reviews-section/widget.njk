<!-- Customer Reviews Section -->
<section class="pt-6 pb-2 bg-white">
  <div class="container mx-auto px-4 text-center">
    <div class="mb-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-black">{{ widget.data.section_title | default('آراء عملائنا') }}</h2>
    </div>
    {% if widget.blocks.length > 1 %}
      <!-- Swiper with navigation & pagination -->
      <div class="swiper testimonials-swiper max-w-3xl mx-auto"
           data-autoplay-delay="5000"
           data-show-navigation="false"
           data-show-pagination="true">
        <div class="swiper-wrapper">
          {% for block in widget.blocks %}
          <div class="swiper-slide flex flex-col items-center justify-center py-8 px-4">
            <div class="flex justify-center text-yellow-400 gap-x-1 mb-4">
              {% set stars = block.data.stars or 5 %}
              {% for i in range(1, 6) %}
                {% if i <= stars %}
                  <span>★</span>
                {% else %}
                  <span class="text-gray-300">★</span>
                {% endif %}
              {% endfor %}
            </div>
            <blockquote class="text-lg sm:text-xl italic text-gray-800 mb-6 leading-relaxed">{{ block.data.text }}</blockquote>
            <div class="flex items-center justify-center gap-x-4">
              {% if block.data.image and block.data.image.fileUrl %}
                <img src="{{ block.data.image.fileUrl }}" class="w-12 h-12 rounded-full object-cover" alt="{{ block.data.alt | default(block.data.name) }}">
              {% else %}
                <div class="w-12 h-12 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 text-sm font-semibold">
                  {{ (block.data.name and block.data.name[0]) or '•' }}
                </div>
              {% endif %}
              <p class="font-semibold text-gray-600">{{ block.data.name }}</p>
            </div>
          </div>
          {% endfor %}
        </div>
        <div class="swiper-pagination mt-6 sm:mt-4"></div>
      </div>
    {% else %}
      <!-- Single review or no swiper -->
      {% for block in widget.blocks %}
      <div class="max-w-3xl mx-auto">
        <div class="flex flex-col items-center justify-center py-8 px-4">
          <div class="flex justify-center text-yellow-400 gap-x-1 mb-4">
            {% set stars = block.data.stars or 5 %}
            {% for i in range(1, 6) %}
              {% if i <= stars %}
                <span>★</span>
              {% else %}
                <span class="text-gray-300">★</span>
              {% endif %}
            {% endfor %}
          </div>
          <blockquote class="text-lg sm:text-xl italic text-gray-800 mb-6 leading-relaxed">{{ block.data.text }}</blockquote>
          <div class="flex items-center justify-center gap-x-4">
            {% if block.data.image and block.data.image.fileUrl %}
              <img src="{{ block.data.image.fileUrl }}" class="w-12 h-12 rounded-full object-cover" alt="{{ block.data.alt | default(block.data.name) }}">
            {% else %}
              <div class="w-12 h-12 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 text-sm font-semibold">
                {{ (block.data.name and block.data.name[0]) or '•' }}
              </div>
            {% endif %}
            <p class="font-semibold text-gray-600">{{ block.data.name }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    {% endif %}
  </div>
</section>

<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<style>
/* Swiper Pagination Styling */
.swiper-pagination-bullet {
  background: #d1d5db;
  opacity: 0.5;
  margin: 0 4px;
  width: 8px;
  height: 8px;
}
/* Align arrows style if used here in future */
.swiper-button-next,
.swiper-button-prev {
  width: 28px;
  height: 28px;
  background: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  color: #111827 !important;
  box-shadow: none;
}
.swiper-button-next:hover,
.swiper-button-prev:hover {
  background: #f9fafb;
  border-color: #d1d5db;
}
.swiper-button-next::after,
.swiper-button-prev::after {
  font-size: 12px;
  font-weight: 700;
}

.swiper-pagination-bullet-active {
  background: #000;
  opacity: 1;
}

/* Responsive adjustments */
@media (max-width: 640px) {
  .swiper-slide {
    padding: 1rem;
    min-height: 280px;
    width: 100% !important;
  }
  
  blockquote {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .swiper-pagination {
    position: relative;
    bottom: auto;
    margin-top: 1rem;
  }
  
  .swiper-pagination-bullet {
    width: 10px;
    height: 10px;
    margin: 0 6px;
  }
}

/* Ensure single slide view on all devices */
.testimonials-swiper .swiper-slide {
  width: 100% !important;
  margin-right: 0 !important;
}

/* Hide any extra slides that might show */
.testimonials-swiper .swiper-slide:not(.swiper-slide-active) {
  opacity: 0;
  pointer-events: none;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const testimonialsSwiperElement = document.querySelector('.testimonials-swiper');
  if (testimonialsSwiperElement) {
    const autoplayDelay = parseInt(testimonialsSwiperElement.dataset.autoplayDelay) || 5000;
    const showNavigation = testimonialsSwiperElement.dataset.showNavigation !== 'false';
    const showPagination = testimonialsSwiperElement.dataset.showPagination !== 'false';
    
    new Swiper('.testimonials-swiper', {
      slidesPerView: 1,
      spaceBetween: 20,
      loop: true,
      autoplay: {
        delay: autoplayDelay,
        disableOnInteraction: false,
        pauseOnMouseEnter: true
      },
      navigation: showNavigation ? {
        nextEl: '.testimonials-swiper .swiper-button-next',
        prevEl: '.testimonials-swiper .swiper-button-prev'
      } : false,
      pagination: showPagination ? {
        el: '.testimonials-swiper .swiper-pagination',
        clickable: true
      } : false,
      breakpoints: {
        // Mobile - رأي واحد فقط
        320: { slidesPerView: 1, spaceBetween: 10 },
        // Tablet - رأي واحد فقط
        768: { slidesPerView: 1, spaceBetween: 20 },
        // Desktop - رأي واحد فقط
        1024: { slidesPerView: 1, spaceBetween: 20 },
        1280: { slidesPerView: 1, spaceBetween: 20 },
      },
    });
  }
});
</script>
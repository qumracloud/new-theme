<!-- Special Offers Section -->
<section class="py-12 bg-white special-offers-section">
  <div class="container mx-auto px-4 flex flex-col gap-y-6">
    <div class="flex justify-between items-center gap-4">
      <h2 class="text-2xl md:text-3xl font-bold text-black">{{ widget.data.section_title | default('خصومات وعروض حصرية') }}</h2>
      <a href="{{ widget.data.view_all_link | default('#') }}" class="text-sm font-semibold text-gray-800 hover:underline whitespace-nowrap">عرض الكل ←</a>
    </div>
    
    <div class="flex flex-row gap-3 sm:gap-4 md:gap-6">
      {% for block in widget.blocks %}
        {% if block.data.image.fileUrl %}
          <a href="{{ block.data.link | default('#') }}" class="block flex-1">
            <img src="{{ block.data.image.fileUrl }}" 
                 alt="{{ block.data.alt | default('عرض') }}" 
                 class="w-full h-28 sm:h-28 md:h-40 lg:h-auto object-contain md:object-cover rounded-lg transition-transform hover:scale-105">
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
/* تقليل المسافة بين الهيرو وسكشن العروض الحصرية في الهواتف المحمولة */
@media (max-width: 768px) {
  .special-offers-section {
    padding-top: 0.5rem !important;
    padding-bottom: 1rem !important;
  }
  
  /* تقليل المسافة إذا كان السكشن يلي الهيرو مباشرة */
  .hero-section + .special-offers-section {
    margin-top: -2rem !important;
    padding-top: 0.5rem !important;
  }
}
</style>
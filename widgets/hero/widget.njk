    object-fit: contain !important; /* Show full image content without cropping */
    object-position: center;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
  }
  
  /* Content adjustments */
  .hero-content {
    max-width: 90%;
    padding: 0 1rem;
  }
  
  .hero-title {

@media (min-width: 769px) and (max-width: 1024px) {
  .hero-slide-container,
  .hero-single-slide {
    height: 400px;
  }
  
  .hero-title {
    font-size: 2rem;
  }
  
  .hero-subtitle {
    font-size: 1.125rem;
  }
}

/* Desktop (1025px and up) */
@media (min-width: 1025px) {
  .hero-slide-container,
  .hero-single-slide {
    height: 500px;
  }
  
  .hero-title {
    font-size: 2.5rem;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
  }
}

/* Large Desktop (1200px and up) */
@media (min-width: 1200px) {
  .hero-slide-container,
  .hero-single-slide {
    height: 600px;
  }
  
  .hero-title {

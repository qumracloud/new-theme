  }
  
  .hero-button {
    padding: 0.6rem 1.25rem;
    font-size: 0.9rem;
    border-radius: 25px;
  }
  
  /* Navigation - mobile optimized with better design */
  .hero-nav-prev,
  .hero-nav-next {
    width: 32px;
    height: 32px;
    background: #ffffff;
    border: 2px solid #e5e7eb;

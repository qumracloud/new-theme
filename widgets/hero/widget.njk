  }
  
  .hero-nav-prev {
    right: 8px;
  }
  
  .hero-nav-next {
    left: 8px;
  }
  
  /* Pagination - positioned over the image */
  .hero-pagination {
    bottom: 16px;
    z-index: 30;
  }
  
  .hero-pagination .swiper-pagination-bullet {
    width: 8px;
    height: 8px;
    margin: 0 4px;
  }
  
  /* Placeholder improvements */
  .hero-placeholder {
    border-radius: 8px;
    background: #ffffff; /* White background */
  }
  
  .hero-placeholder-title {
    font-size: 1.25rem;
  }
  
  .hero-placeholder-text {
    font-size: 0.9rem;
  }
  
  /* Section spacing - mobile optimized */
  .hero-section {
    padding: 0;
    margin-bottom: 0.25rem;

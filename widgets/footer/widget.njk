<footer class="text-white pt-16 pb-8" style="background-color: #002c31;">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-12 lg:gap-16">
  
        <!-- حول الشركة -->
        <div class="col-span-1">
          <h3 class="font-bold mb-6 sm:mb-8 text-xl font-['Cairo',sans-serif] text-white">{{ globals.app.name }}</h3>
          <p class="text-sm text-gray-300 leading-relaxed font-['Cairo',sans-serif] mb-4 sm:mb-6">{{ widget.data.company_description }}</p>
  
          {% if widget.data.contact_location %}
          <p class="text-sm flex items-center gap-3 text-gray-300 mt-4 sm:mt-6 font-['Cairo',sans-serif]">
            <i class="fi fi-ts-marker text-gray-400"></i> 
            {{ widget.data.contact_location }}
          </p>
          {% endif %}
          {% if widget.data.contact_email %}
          <p class="text-sm flex items-center gap-3 text-gray-300 mt-3 sm:mt-4 font-['Cairo',sans-serif]">
            <i class="fi fi-ts-envelope text-gray-400"></i> 
            <a href="mailto:{{ widget.data.contact_email }}" class="hover:text-white transition-colors duration-200">{{ widget.data.contact_email }}</a>
          </p>
          {% endif %}
          {% if widget.data.contact_phone %}
          <p class="text-sm flex items-center gap-3 text-gray-300 mt-3 sm:mt-4 font-['Cairo',sans-serif]">
            <i class="fi fi-ts-phone-call text-gray-400"></i> 
            <a href="tel:{{ widget.data.contact_phone }}" class="hover:text-white transition-colors duration-200 cursor-pointer">{{ widget.data.contact_phone }}</a>
          </p>
          {% endif %}
        </div>
  
        <!-- روابط القائمة السفلية -->
        <div>
          <h3 class="font-bold mb-6 sm:mb-8 text-lg font-['Cairo',sans-serif] text-white">روابط سريعة</h3>
          <ul class="flex flex-col gap-3 sm:gap-4 text-sm">
            {% for item in widget.data.footer_menu %}
            <li>
              <a href="{{ item.url }}" class="text-gray-300 hover:text-white transition-colors duration-200 font-['Cairo',sans-serif]">
                {{ item.title | default('رابط بدون عنوان') }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </div>
  
        <!-- روابط ثابتة (سياسات) -->
        <div>
          <h3 class="font-bold mb-6 sm:mb-8 text-lg font-['Cairo',sans-serif] text-white">سياسة</h3>
          <ul class="flex flex-col gap-3 sm:gap-4 text-sm">
            {% for item in widget.data.policy_links %}
            <li>
              <a href="{{ item.url }}" class="text-gray-300 hover:text-white transition-colors duration-200 font-['Cairo',sans-serif]">
                {{ item.title | default('رابط بدون عنوان') }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </div>
  
        <!-- دعم -->
        <div>
          <h3 class="font-bold mb-6 sm:mb-8 text-lg font-['Cairo',sans-serif] text-white">يدعم</h3>
          <ul class="flex flex-col gap-3 sm:gap-4 text-sm">
            {% for item in widget.data.support_links %}
            <li>
              <a href="{{ item.url }}" class="text-gray-300 hover:text-white transition-colors duration-200 font-['Cairo',sans-serif]">
                {{ item.title | default('رابط بدون عنوان') }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
  
      <!-- أسفل الفوتر -->
      <div class="flex flex-col gap-4 mt-8 sm:mt-12">
        <div class="border-t border-gray-700 pt-6 sm:pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-400">
          <p class="font-['Cairo',sans-serif]">© {{ "now"|date("Y") }}, {{ globals.app.name }}</p>
  
          <div class="flex space-x-4 sm:space-x-6 mt-4 md:mt-0">
            {% if widget.data.facebook_link %}
            <a href="{{ widget.data.facebook_link }}" aria-label="Facebook" class="text-gray-400 hover:text-white transition-colors duration-200 p-2 hover:bg-gray-700 rounded-lg">
              <i class="fab fa-facebook-f text-lg"></i>
            </a>
            {% endif %}
            {% if widget.data.x_link %}
            <a href="{{ widget.data.x_link }}" aria-label="Twitter" class="text-gray-400 hover:text-white transition-colors duration-200 p-2 hover:bg-gray-700 rounded-lg">
              <i class="fab fa-twitter text-lg"></i>
            </a>
            {% endif %}
            {% if widget.data.instagram_link %}
            <a href="{{ widget.data.instagram_link }}" aria-label="Instagram" class="text-gray-400 hover:text-white transition-colors duration-200 p-2 hover:bg-gray-700 rounded-lg">
              <i class="fab fa-instagram text-lg"></i>
            </a>
            {% endif %}
            {% if widget.data.p_link %}
            <a href="{{ widget.data.p_link }}" aria-label="Pinterest" class="text-gray-400 hover:text-white transition-colors duration-200 p-2 hover:bg-gray-700 rounded-lg">
              <i class="fab fa-pinterest text-lg"></i>
            </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </footer>

<style>
/* Mobile Padding Fix for Footer */
@media (max-width: 640px) {
  .container {
    padding-left: 16px !important;
    padding-right: 16px !important;
  }
}
</style>
  
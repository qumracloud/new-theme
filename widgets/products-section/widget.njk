<!-- Featured Products -->
<section class="products-section">
  <div class="container">
    {% ui "button.njk", produtt='sdf',cart='wer' %}
    <div class=" flex flex-col gap-4 ">
      <div class="grid grid-cols-4 gap-x-6 gap-y-8">
        <!-- Product Card 1 -->
        {% for product in widget.data.products %}
        <a  href="/product/{{ product.slug }}" class=" pb-4 flex flex-col gap-3 rounded-lg shadow-[0px_0px_10px_0px_#E4E4E4] ">
          <div class="  relative h-[160px]">
            <img src={{product.images[0].fileUrl}} alt="product" class="rounded-t-lg w-full h-full object-cover">
          </div>
          <div class=" flex-col w-full flex gap-4 px-3 ">
            <div class=" flex flex-col gap-1">
              <p class="  font-bold text-[#0D0D0D]">{{ product.title | truncate(30) }}
              </p>
              <div class=" flex items-center gap-[6px]">
                <div class=" flex items-center gap-1">
                  <i class="fi flex items-center text-[10px] fi-rr-star"></i>
                  <i class="fi flex items-center text-[10px] fi-rr-star"></i>
                  <i class="fi flex items-center text-[10px] fi-rr-star"></i>
                  <i class="fi flex items-center text-[10px] fi-rr-star"></i>
                </div>
                <span>3.00</span>
              </div>
              <div class=" flex items-center gap-1">
                <p class=" text-primary">{{product.pricing.price}} ج.م</p>
                <p class=" text-[#868584]  text-decoration-line-through  text-sm">{{product.pricing.compareAtPrice}} ج.م</p>
              </div>
              <button class=" text-primary justify-center border border-primary flex items-center gap-2 rounded-full py-[9px] px-4">
                <i class="fi flex items-center fi-rr-shopping-cart"></i>
                <p>اضافة للسلة</p>
              </button>
            </div>
          </div>
        </a>
        {% endfor %}
      </div>
      <a  href="/products" class=" flex  self-end w-max gap-2 items-center ">
        <span class=" text-primary  text-end"> عرض المزيد </span>
        <i class="fi flex items-center fi-rr-angle-double-small-left text-primary "></i>
      </a>
    </div>
  </div>
</section>